<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile - Netflex</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: radial-gradient(circle at top, #0d0d0d, #000);
      color: white;
      font-family: 'Helvetica Neue', Arial, sans-serif;
    }

    .profile-card {
      background: linear-gradient(145deg, #111, #1a1a1a);
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 0 25px rgba(229, 9, 20, 0.5);
      text-align: center;
    }

    .profile-card img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      margin: 0 auto 1rem;
      border: 3px solid #e50914;
      box-shadow: 0 0 15px #e50914;
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin: 2rem 0 1rem;
      text-shadow: 0 0 15px #e50914, 0 0 25px #ff0033;
    }

    .movie-row {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding-bottom: 1rem;
      scroll-behavior: smooth;
    }

    .movie-card {
      flex: none;
      width: 160px;
      position: relative;
      border-radius: 0.75rem;
      overflow: hidden;
      background: #1a1a1a;
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .movie-card img {
      width: 100%;
      height: 220px;
      object-fit: cover;
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .movie-card:hover img {
      transform: scale(1.15);
      filter: brightness(1.2);
    }

    .movie-card p {
      padding: 0.5rem;
      font-size: 0.9rem;
      text-align: center;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
    }

    /* Delete modal */
    .modal {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.85);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 50;
    }
    .modal.active { display: flex; }
    .modal-content {
      background: #1a1a1a;
      padding: 2rem;
      border-radius: 1rem;
      text-align: center;
      box-shadow: 0 0 20px #e50914;
      max-width: 400px;
    }
    .modal-content button {
      margin: 0.5rem;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <div class="p-6 max-w-5xl mx-auto">
    <!-- Profile info -->
    <div class="profile-card">
      <img src="<%= user.profilePicture || 'https://via.placeholder.com/150' %>" alt="Profile Picture">
      <h2 class="text-2xl font-bold mb-1"><%= user.username %></h2>
      <p class="text-gray-400 mb-2"><%= user.email %></p>
      <p class="mb-4">Role: <span class="font-semibold text-red-500"><%= user.role %></span></p>

      <a href="/user/netflex/profile/update" class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg shadow-lg transition">Update Profile</a>
    </div>

    <!-- Continue Watching -->
    <h3 class="section-title">Continue Watching</h3>
    <div class="movie-row">
      <% if (user.recentlyWatched && user.recentlyWatched.length > 0) { %>
        <% user.recentlyWatched.forEach(movie => { %>
          <a href="/user/netflex/movie/<%= movie._id %>" class="movie-card">
            <img src="<%= movie.posterUrl %>" alt="<%= movie.title %>">
            <p><%= movie.title %></p>
          </a>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500">No movies watched yet.</p>
      <% } %>
    </div>

    <!-- My List -->
    <h3 class="section-title">My List</h3>
    <div class="movie-row">
      <% if (user.myList && user.myList.length > 0) { %>
        <% user.myList.forEach(movie => { %>
          <a href="/user/netflex/movie/<%= movie._id %>" class="movie-card">
            <img src="<%= movie.posterUrl %>" alt="<%= movie.title %>">
            <p><%= movie.title %></p>
          </a>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500">No movies in your list yet.</p>
      <% } %>
    </div>

    <!-- Delete Account -->
    <div class="mt-10 text-center">
      <button onclick="openModal()" class="px-4 py-2 bg-gray-800 hover:bg-red-700 rounded-lg shadow-lg transition">Delete Account</button>
    </div>
  </div>

  <!-- Delete Modal -->
  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <h3 class="text-xl font-bold mb-4">Are you sure you want to delete your account?</h3>
      <div>
        <form action="/user/delete" method="POST" class="inline">
          <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg">Confirm</button>
        </form>
        <button onclick="closeModal()" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded-lg">Cancel</button>
      </div>
    </div>
  </div>

  <!-- Bottomnav -->
  <%- include('partials/bottomnav') %>

  <script>
    function openModal() {
      document.getElementById("deleteModal").classList.add("active");
    }
    function closeModal() {
      document.getElementById("deleteModal").classList.remove("active");
    }
  </script>
</body>
</html>
